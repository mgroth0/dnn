    perm = np.random.permutation(100)
    for p in perm:
        for fold in Folder('_images_human/TimePilot').listmfiles():
            for file in fold.listmfiles():
                if file.name == f'sym{p}.png':
                    print(f'{file.parentFile.name}/{file.name}')
